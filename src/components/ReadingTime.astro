---
import wordCount from "word-count";
import { useTranslations } from "../i18n/utils";

interface Props {
    body: string;
    lang: string;
}

const { body, lang }: Props = Astro.props;
const t = useTranslations(lang);
const calculateReadingTime = (postContent) => {
    const wordsPerMinute = 200; // Average reading speed
    const contentAsString = postContent || ""; // Ensure the content is a string
    const wordCountInPost = wordCount(contentAsString);
    const readingTime = Math.ceil(wordCountInPost / wordsPerMinute);
    return t('reading.minRead', readingTime);
};
---

{calculateReadingTime(body)}
