---
interface Props {
    date: Date | string;
    lang: string;
}

const { date, lang = "en" }: Props = Astro.props;
---

<time datetime={new Date(date).toISOString()}>
    {
        new Date(date).toLocaleDateString(lang, {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
