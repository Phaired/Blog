---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import Theme from "./ThemeIcon.astro";
import LanguageSwitcher from "./LanguageSwitcher.astro";
import { useTranslations } from "../i18n/utils";

interface Props {
    lang: string;
    title?: string;
}

const { lang, title = SITE_TITLE }: Props = Astro.props;
const t = useTranslations(lang);

// Helper to mark the "active" nav link based on the current URL
function isActive(prefix: string) {
    return Astro.url.pathname.startsWith(`/${lang}${prefix}`);
}
---

<header class="site-header">
    <div class="container">
        <!-- Site title (hidden on mobile) -->
        <h1 class="logo">
            <a href={`/${lang}/`}>{title}</a>
        </h1>

        <!-- Navigation links -->
        <nav class="nav-main" aria-label="Main navigation">
            <HeaderLink
                    href={`/${lang}/projects`}
                    class:list={[isActive("/projects") ? "active" : ""]}
            >
                {t("nav.projects")}
            </HeaderLink>

            <HeaderLink
                    href={`/${lang}/blog`}
                    class:list={[isActive("/blog") ? "active" : ""]}
            >
                {t("nav.blog")}
            </HeaderLink>

            <HeaderLink
                    href={`/${lang}/about`}
                    class:list={[isActive("/about") ? "active" : ""]}
            >
                {t("nav.about")}
            </HeaderLink>
        </nav>

        <!-- Right side: theme and language -->
        <div class="nav-actions">
            <!-- Theme toggle -->
            <div class="icon-wrapper">
                <Theme />
            </div>

            <!-- Language switcher -->
            <div class="icon-wrapper">
                <LanguageSwitcher lang={lang} />
            </div>
        </div>
    </div>
</header>

<style>
    /* ----- Header base styles ----- */
    .site-header {
        position: relative;
        background: rgb(var(--bg-color-accent));
        box-shadow: 0 1px 4px rgba(var(--gray), 0.05);
        padding: 0.5rem 0.75rem;
        border-bottom: 1px solid rgba(var(--gray), 0.1);
    }

    .container {
        max-width: 1020px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        position: relative;
        min-height: 3rem;
    }

    /* ----- Logo ----- */
    .logo {
        margin: 0;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        height: 100%;
    }

    .logo a {
        font-size: 1.25rem;
        font-weight: bold;
        color: var(--accent);
        text-decoration: none;
        white-space: nowrap;
        line-height: 1;
    }

    /* ----- Main Navigation ----- */
    .nav-main {
        display: flex;
        align-items: center;
        gap: 1.25rem;
        height: 100%;
    }

    .nav-main a {
        position: relative;
        padding: 0.4rem 0.2rem;
        font-size: 0.9rem;
        color: var(--color-text);
        text-decoration: none;
        border-bottom: 2px solid transparent;
        transition: border-bottom-color 0.2s ease-in-out;
        white-space: nowrap;
        display: flex;
        align-items: center;
        height: 100%;
    }

    .nav-main a:hover {
        border-bottom-color: var(--accent);
    }

    .nav-main a.active {
        border-bottom-color: var(--accent);
        font-weight: 600;
    }

    /* ----- Right Actions ----- */
    .nav-actions {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        flex-shrink: 0;
        height: 100%;
    }

    .icon-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.4rem;
        height: 100%;
    }

    /* ----- Responsive Design ----- */
    @media (max-width: 768px) {
        /* Hide logo on mobile */
        .logo {
            display: none;
        }

        /* Adjust navigation for mobile */
        .nav-main {
            gap: 1rem;
            flex: 1;
        }

        .nav-main a {
            font-size: 0.85rem;
            padding: 0.3rem 0.1rem;
        }

        .nav-actions {
            gap: 0.2rem;
        }
    }

    @media (max-width: 480px) {
        .site-header {
            padding: 0.4rem 0.6rem;
        }

        .container {
            min-height: 2.5rem;
            gap: 0.5rem;
        }

        .nav-main {
            gap: 0.75rem;
        }

        .nav-main a {
            font-size: 0.8rem;
        }

        .icon-wrapper {
            padding: 0.3rem;
        }
    }
</style>